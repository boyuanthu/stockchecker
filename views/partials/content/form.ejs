<div class = "row">

    <div class = "col-md-6 col-md-offset-3 center">
        <h1 class = "center">Stock Checker</h1>
        
        <div id="formContainer">
            <form method = "post" role="form" id="tickerForm" name="tickerForm">
        
        	    <div class = "form-group">
                    <input type = "text" class = "form-control" name = "ticker" id = "ticker" placeholder = "Enter your stock ticker."/ >
        	    </div>

                <div class = "form-group white">
                    <label class="radio-inline"><input type="radio" name="optradio" value="week">1 Week</label>
                    <label class="radio-inline"><input type="radio" name="optradio" value="month">1 Month</label>
                    <label class="radio-inline"><input type="radio" name="optradio" value="season">3 Month</label>
                    <label class="radio-inline"><input type="radio" name="optradio" value="year" checked>1 Year</label>
                <div class = "form-group">

    		    <button id = "findMyStock" class = "btn btn-success btn-lg">Check My Stock</button>

		  </form>

          <div id = 'msgBox'>
